# ============================================================================
# ENVIRONMENT CONFIGURATION - Traçabilité Produits
# ============================================================================
# 
# Copy this file to .env.local and fill in your own values
# DO NOT commit .env.local to version control
# 
# Get your Supabase credentials from:
# https://app.supabase.com/project/[your-project-id]/settings/api
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Public (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public (safe to expose in frontend)
# Used by client-side code via @supabase/supabase-js
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here-see-supabase-settings

# Secret (NEVER expose, server-side only via /api routes)
# Used by backend for RPC calls and admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here-keep-secret

# ============================================================================
# SIMULATION CONFIGURATION
# ============================================================================

# Enable time acceleration in simulation (for testing/demo)
SIM_TIME_ACCELERATION=true

# Timeout before escalation (seconds)
ESCALATION_TIMEOUT_SECONDS=10

# ============================================================================
# OPTIONAL: DATABASE URL (for direct SQL operations)
# ============================================================================

# PostgreSQL connection string (optional, for seed scripts)
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
